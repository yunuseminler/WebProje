@page
@model LoginModel

@{
    ViewData["Title"] = "Giriş Yap";
}



<header id="header" class="header">
    <div class="container">
        <div class="row" style="justify-content: center;">
            <div class="col-md-4">
                <h1 style="color: white;">@ViewData["Title"]</h1>
                <section>
                    <form id="account" method="post">
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group justify-content-between">
                            <button type="submit" class="btn" style="background-color: #7dc22b; color: white;">Log in</button>
                            <a class="btn" asp-area="Identity" asp-page="/Account/Register" style="background-color: #7dc22b; color: white;">Kayıt Ol</a>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
    </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
